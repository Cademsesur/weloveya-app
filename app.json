{
  "expo": {
    "name": "weloveya",
    "slug": "weloveya",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "weloveya",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cademsesur.weloveya"
    },

    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdge": true,
      "package": "com.cademsesur.weloveya"
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "splash": {
      "image": "./assets/images/logo-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#18172A"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo-splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#18172A",
          "dark": {
            "image": "./assets/images/logo-splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#18172A"
          }
        }
      ],
      "expo-font"
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
